<catel:UserControl
    x:Class="PIK_GP_Acad.Insolation.UI.TreesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:catel="http://catel.codeplex.com"
    xmlns:converters="clr-namespace:AcadLib.WPF.Converters;assembly=AcadLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PIK_GP_Acad.Insolation.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    d:DataContext="{d:DesignInstance local:DesignTreesViewModel,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <!--<catel:UserControl.Resources>
        <ResourceDictionary Source="/PIK_GP_Acad;component/Model/Insolation/UI/Resources/ControlStyles.xaml" />
    </catel:UserControl.Resources>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <!--  Список расчетных точекк  -->
        <DockPanel Grid.Column="0">
            <StackPanel>
                <ListBox Background="Transparent" ItemsSource="{Binding Points}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{Binding InsValue.Requirement.Color, Converter={converters:ColorToBrushConverter}}">
                                <TextBlock Margin="2" FontWeight="Bold" Text="{Binding Number}">
                                    <TextBlock.RenderTransform>
                                        <ScaleTransform ScaleX="2" ScaleY="2" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <TextBlock Margin="1" Text="{Binding InsValue.Requirement.Type, Converter={catel:ObjectToDisplayNameConverter}, StringFormat={}}" />
                                <TextBlock Margin="1" Text="{Binding InsValue.TotalTime, StringFormat=всего {}}" />
                                <TextBlock Margin="1" Text="{Binding InsValue.MaxContinuosTime, StringFormat=макс {}}" />
                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Command="{Binding AddPoint}" Content="Добавить точку" ToolTip="{Binding AddpointInfo}" />
            </StackPanel>
        </DockPanel>
        <!--  Настройки высот для визуализации  -->
        <StackPanel Grid.Column="1">
            <ListBox
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                ItemsSource="{Binding VisualOptions}"
                ToolTip="Настройки визуализации цветов елочек по высотам зданий">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Background="{Binding Color, Converter={converters:ColorToBrushConverter}}">
                            <TextBox
                                HorizontalAlignment="Center"
                                Background="Transparent" BorderThickness="0"
                                Text="{Binding Height, StringFormat={}{0} м}" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</catel:UserControl>
