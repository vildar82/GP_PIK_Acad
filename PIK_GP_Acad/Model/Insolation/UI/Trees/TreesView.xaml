<catel:UserControl
    x:Class="PIK_GP_Acad.Insolation.UI.TreesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:catel="http://catel.codeplex.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:PIK_GP_Acad.Insolation.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:myconverters="clr-namespace:AcadLib.WPF.Converters;assembly=AcadLib"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    d:DataContext="{d:DesignInstance local:TreesViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="166" d:DesignWidth="156"
    mc:Ignorable="d">
    <catel:UserControl.Resources>
        <BitmapImage x:Key="tree" UriSource="/PIK_GP_Acad;component/Resources/GP_Ins_Trees.png" />
        <BitmapImage x:Key="ilums" UriSource="/PIK_GP_Acad;component/Resources/GP_Ins_Illums.png" />
        <BitmapImage x:Key="options" UriSource="/PIK_GP_Acad;component/Resources/options.png" />
        <BitmapImage x:Key="Close" UriSource="/PIK_GP_Acad;component/Resources/Close.png" />

        <!--<Image x:Key="InsTrees" Source="/PIK_GP_Acad;component/Resources/GP_Ins_Trees.png"/>
        <Image x:Key="InsIllums" Source="/PIK_GP_Acad;component/Resources/GP_Ins_Illums.png" />
        <Image x:Key="options" Source="/PIK_GP_Acad;component/Resources/options.png" />
        <Image x:Key="Close" Source="/PIK_GP_Acad;component/Resources/Close.png" />-->
        <sys:Double x:Key="ImageButtonHeight">22</sys:Double>
    </catel:UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!--  Точки  -->
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <!--  Визуализация высот  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Список расчетных точекк  -->
        <ListBox
            x:Name="lbPoints"
            Grid.Row="0"
            HorizontalContentAlignment="Stretch"
            Background="Transparent" BorderThickness="0"
            ItemsSource="{Binding Points}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedPoint}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <catel:EventToCommand Command="{Binding ShowPoint}" DisableAssociatedObjectOnCannotExecute="False" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Margin="2" HorizontalAlignment="Stretch"
                        Background="{Binding InsValue.Requirement.Color, Converter={myconverters:ColorToBrushConverter}}"
                        ToolTip="{Binding Info}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="3"
                            FontSize="20" FontWeight="Bold"
                            Text="{Binding Number}" />
                        <WrapPanel Grid.Column="1">
                            <!--  Инфо  -->
                            <StackPanel Margin="5" Orientation="Horizontal">
                                <TextBlock
                                    Margin="1" VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="{Binding InsValue.Requirement.Name}" />
                                <TextBlock Margin="1" VerticalAlignment="Center" Text="{Binding InsValue.TotalTimeString, StringFormat={} всего:{0}\,}" />
                                <TextBlock Margin="1" VerticalAlignment="Center" Text="{Binding InsValue.MaxContinuosTimeString, StringFormat={} макс:{0}}" />
                            </StackPanel>
                            <!--  Кнопки  -->
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <!--  Вкл/выкл зон инсоляции точки  -->
                                <ToggleButton
                                    Height="{StaticResource ImageButtonHeight}"
                                    Margin="1"
                                    Background="Transparent"
                                    IsChecked="{Binding IsVisualIllumsOn, Mode=TwoWay}"
                                    ToolTip="Визуализация зон инсоляции точки.">
                                    <Image Source="{StaticResource ilums}" />
                                </ToggleButton>
                                <!--  Редактирование параметров точки  -->
                                <Button
                                    Height="{StaticResource ImageButtonHeight}"
                                    Margin="1"
                                    Background="Transparent"                                    
                                    Command="{Binding ElementName=lbPoints, Path=DataContext.EditPoint}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Редактирование параметров точки">
                                    <Image Source="{StaticResource options}" />
                                </Button>
                                <!--  Удаление точки  -->
                                <Button
                                    Height="{StaticResource ImageButtonHeight}"
                                    Margin="1"
                                    Background="Transparent"                                    
                                    Command="{Binding ElementName=lbPoints, Path=DataContext.DeletePoint}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Удаление выделенной точки в списке">
                                    <Image Source="{StaticResource Close}" />
                                </Button>
                            </StackPanel>
                        </WrapPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Command="{Binding AddPoint}" Content="Добавить точку" ToolTip="{Binding AddpointInfo}" />
        </StackPanel>
        <!--  Управление елочками  -->
        <WrapPanel Grid.Row="2" Margin="2">
            <ToggleButton
                Height="{StaticResource ImageButtonHeight}"
                Margin="1"
                Background="Transparent"
                IsChecked="{Binding IsVisualIllumsOn}"
                ToolTip="Включение/выключение визуализации зон инсоляции всех точек">
                <Image Source="{StaticResource ilums}" />
            </ToggleButton>
            <ToggleButton
                Height="{StaticResource ImageButtonHeight}"
                Margin="1"
                Background="Transparent"
                IsChecked="{Binding IsVisualTreeOn}"
                ToolTip="Включение/выключение визуализации елочек">
                <Image Source="{StaticResource tree}" />
            </ToggleButton>
        </WrapPanel>
        <Button
            Grid.Row="2"
            Height="{StaticResource ImageButtonHeight}"
            Margin="2" HorizontalAlignment="Right"
            Command="{Binding EditTreeOptions}"
            Background="Transparent"
            ToolTip="Настройки елочек">
            <Image Source="{StaticResource options}" />
        </Button>
        <!--  Настройки высот для визуализации  -->
        <!--<StackPanel Grid.Row="1">
            <ListBox
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                ItemsSource="{Binding VisualOptions}"
                ToolTip="Настройки визуализации цветов елочек по высотам зданий">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Background="{Binding Color, Converter={converters:ColorToBrushConverter}}">
                            <TextBox
                                HorizontalAlignment="Center"
                                Background="Transparent" BorderThickness="0"
                                Text="{Binding Height, StringFormat={}{0} м}" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>-->
    </Grid>
</catel:UserControl>
