<UserControl
    x:Class="PIK_GP_Acad.Insolation.UI.TreesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:PIK_GP_Acad.Insolation.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:AcadLib.WPF.Converters;assembly=AcadLib"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    d:DesignHeight="259" d:DesignWidth="126"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BitmapImage x:Key="tree" UriSource="/PIK_GP_Acad;component/Resources/GP_Ins_Trees.png" />
        <BitmapImage x:Key="ilums" UriSource="/PIK_GP_Acad;component/Resources/GP_Ins_Illums.png" />
        <BitmapImage x:Key="options" UriSource="/PIK_GP_Acad;component/Resources/options.png" />
        <BitmapImage x:Key="Close" UriSource="/PIK_GP_Acad;component/Resources/Close.png" />
        <BitmapImage x:Key="Add" UriSource="/PIK_GP_Acad;component/Resources/Add.png" />

        <!--<Image x:Key="InsTrees" Source="/PIK_GP_Acad;component/Resources/GP_Ins_Trees.png"/>
        <Image x:Key="InsIllums" Source="/PIK_GP_Acad;component/Resources/GP_Ins_Illums.png" />
        <Image x:Key="options" Source="/PIK_GP_Acad;component/Resources/options.png" />
        <Image x:Key="Close" Source="/PIK_GP_Acad;component/Resources/Close.png" />-->
        <sys:Double x:Key="PointButtonsHeight">20</sys:Double>
        <sys:Double x:Key="TreeButtonsHeight">23</sys:Double>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!--  Список точек  -->
            <RowDefinition />
            <!--  Кнопки  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Список расчетных точекк  -->
        <ListBox
            x:Name="lbPoints"
            Grid.Row="0"
            HorizontalContentAlignment="Stretch"
            Background="Transparent" BorderThickness="0"
            ItemsSource="{Binding Points}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedPoint}">
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <catel:EventToCommand Command="{Binding ShowPoint}" DisableAssociatedObjectOnCannotExecute="False" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="1" Background="{Binding InsValue.Requirement.Color, Converter={converters:ColorToBrushConverter}}" 
                          ToolTip="{Binding Info}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="3" VerticalAlignment="Center"
                            FontSize="20" FontWeight="Bold"
                            Text="{Binding Number}" />
                        <!--  Инфо  -->
                        <WrapPanel Grid.Column="1" Margin="1" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding InsValue.Requirement.Name}" />
                            <TextBlock Margin="1,0,1,0" VerticalAlignment="Center" Text="{Binding InsValue.TotalTimeString, StringFormat={} всего: {0}\,}" />
                            <TextBlock Margin="1,0,1,0" VerticalAlignment="Center" Text="{Binding InsValue.MaxContinuosTimeString, StringFormat={} макс: {0}}" />
                        </WrapPanel>
                        <!--  Кнопки  -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal">
                            <!--  Вкл/выкл зон инсоляции точки  -->
                            <ToggleButton
                                Height="{StaticResource PointButtonsHeight}"
                                Margin="0"
                                Background="Transparent"
                                IsChecked="{Binding IsVisualIllumsOn, Mode=TwoWay}"
                                ToolTip="Визуализация зон инсоляции точки.">
                                <Image Source="{StaticResource ilums}" />
                            </ToggleButton>
                            <!--  Редактирование параметров точки  -->
                            <Button
                                Height="{StaticResource PointButtonsHeight}"
                                Margin="0"
                                Background="Transparent"
                                Command="{Binding ElementName=lbPoints, Path=DataContext.EditPoint}"
                                CommandParameter="{Binding}"
                                ToolTip="Редактирование параметров точки">
                                <Image Source="{StaticResource options}" />
                            </Button>
                            <!--  Удаление точки  -->
                            <Button
                                Width="{StaticResource PointButtonsHeight}"
                                Height="{StaticResource PointButtonsHeight}"
                                Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Background="Transparent"
                                Command="{Binding ElementName=lbPoints, Path=DataContext.DeletePoint}"
                                CommandParameter="{Binding}"
                                ToolTip="Удаление выделенной точки в списке">
                                <Image Source="{StaticResource Close}" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--  Кнопки управление елочками  -->
        <Grid Grid.Row="1" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="20"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <ToggleButton
                    Height="{StaticResource TreeButtonsHeight}"
                    Background="Transparent"
                    IsChecked="{Binding IsVisualIllumsOn}"
                    ToolTip="Включение/выключение визуализации зон инсоляции всех точек">
                    <Image Source="{StaticResource ilums}" />
                </ToggleButton>
                <ToggleButton
                    Height="{StaticResource TreeButtonsHeight}"
                    Background="Transparent"
                    IsChecked="{Binding IsVisualTreeOn}"
                    ToolTip="Включение/выключение визуализации елочек">
                    <Image Source="{StaticResource tree}" />
                </ToggleButton>
            </StackPanel>
            <!--  Кнопка добавление точки  -->
            <Button
                Grid.Column="1"
                Height="{StaticResource TreeButtonsHeight}"                
                Command="{Binding AddPoint}"                
                ToolTip="Добавление точки" 
                Background="Transparent">
                <Image Source="{StaticResource Add}" />
            </Button>
            <Button
                Grid.Column="2"
                Height="{StaticResource TreeButtonsHeight}"
                HorizontalAlignment="Right"
                Background="Transparent"
                Command="{Binding EditTreeOptions}"
                ToolTip="Настройки елочек">
                <Image Source="{StaticResource options}" />
            </Button>
        </Grid>        
    </Grid>
</UserControl>
