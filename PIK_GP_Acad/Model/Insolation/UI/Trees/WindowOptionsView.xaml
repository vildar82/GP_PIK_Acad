<UserControl
    x:Class="PIK_GP_Acad.Insolation.UI.WindowOptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    
    xmlns:converters="clr-namespace:AcadLib.WPF.Converters;assembly=AcadLib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    d:DesignHeight="226.667" d:DesignWidth="141"
    mc:Ignorable="d">
    <!--<UserControl.Resources>
        <ResourceDictionary Source="/PIK_GP_Acad;component/Model/Insolation/UI/Resources/ControlStyles.xaml" />
    </UserControl.Resources>-->
    <GroupBox BorderBrush="Gray" Header="Параметры окна" Margin="2">
        <StackPanel HorizontalAlignment="Center" Margin="2">
            <WrapPanel HorizontalAlignment="Center" IsEnabled="{Binding ElementName=chkBoxCustom, Path=IsChecked, Converter={converters:BooleanToOppositeBooleanConverter}}">
                <StackPanel Margin="3" HorizontalAlignment="Center">
                    <TextBlock Text="Ширина окна, м" HorizontalAlignment="Center"/>
                    <TextBox Text="{Binding Width}" HorizontalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="3">
                    <TextBlock Text="Тип конструкции" />
                    <ComboBox ItemsSource="{Binding WindowConstructions}" SelectedItem="{Binding Construction}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}"  Margin="1"/>
                                    <TextBlock Text="{Binding Depth}" Margin="1" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="3">
                    <TextBlock Text="Глубина четверти" />
                    <ComboBox ItemsSource="{Binding Quarters}" SelectedItem="{Binding Quarter}" />
                </StackPanel>
            </WrapPanel>
            <StackPanel Margin="3">
                <TextBlock HorizontalAlignment="Center" Text="Угол тени окна, °" />
                <TextBox
                    HorizontalContentAlignment="Center"
                    MaxWidth="100"
                    IsEnabled="{Binding ElementName=chkBoxCustom, Path=IsChecked}"
                    Text="{Binding ShadowAngle, Converter={converters:RadiansToDegreeConverter}}" />
                <StackPanel Margin="2" HorizontalAlignment="Center" Orientation="Horizontal">
                    <CheckBox x:Name="chkBoxCustom" IsChecked="{Binding IsCustomAngle}" />
                    <TextBlock Text="Пользовательский" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
